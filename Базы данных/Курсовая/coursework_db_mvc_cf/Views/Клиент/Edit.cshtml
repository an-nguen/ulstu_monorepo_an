            @Html.EditorFor(model => model.клиент.Фамилия, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.клиент.Фамилия, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
