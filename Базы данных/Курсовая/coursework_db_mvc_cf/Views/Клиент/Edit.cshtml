        @Html.LabelFor(model => model.checkBoxList, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @for (int i = 0; i < Model.checkBoxList.Count(); i++)
            {
                <div class="form-check">
                    @Html.HiddenFor(m => Model.checkBoxList[i].id)
