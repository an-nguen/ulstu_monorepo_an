            @Html.ValidationMessageFor(model => model.клиент.Почта, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.клиент.Дата_рождения, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
